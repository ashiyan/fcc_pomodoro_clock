@keyframes rotation
	from
		transform rotate(0)
	to
		transform rotate(360deg)
		
@keyframes rotation2
	from
		transform rotate(0)
	to
		transform rotate(-360deg)
		
.container
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	margin auto
	border 1px solid white
	width 300px
	height 300px
		
.circle
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	margin auto
	width 100px
	height 100px
	border 5px solid white
	border-left none
	border-right none
	border-bottom none
	border-radius 50%
	animation rotation 1s linear infinite
	&_n2
		width 110px
		height 110px
		border-color yellow
		animation rotation2 1500ms linear infinite